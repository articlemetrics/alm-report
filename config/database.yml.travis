mysql: &mysql
  adapter: mysql2
  username: root
  password:

postgresql: &postgresql
  adapter: postgresql
  username: postgres
  password:
  pool: 10
  min_messages: ERROR

defaults: &defaults
  pool: 5
  timeout: 5000
  database: alm-report_<%= Rails.env %>
  host: localhost
  <<: *<%= ENV['DB'] || "postgresql" %>

development:
  <<: *defaults

test:
  <<: *defaults

production:
  <<: *defaults
